@model IEnumerable<MonitorNetwork.Database.transaction>

@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transactions</h2>

<p>
    @Html.ActionLink("Create New Transaction", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Transaction ID
        </th>
        <th>
            Account
        </th>
        <th>
            Merchant Name
        </th>
        <th>
            Credit/Debit
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.transactionID)
        </td>
        <td>
            @(Html.DisplayFor(modelItem => item.account.accountFirstName)) @(Html.DisplayFor(modelItem => item.account.accountLastName))
        </td>
        <td>
            @if(item.storeID.HasValue)
            {
                @Html.DisplayFor(modelItem => item.store.merchantName)
            }
            else
            {
                @: SELF
            }
        </td>
        <td>
            @(item.isCredit ? "Credit" : "Debit")
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @if (!item.isEncrypted) {
                @Html.ActionLink("Encrypt", "Encrypt", new { id = item.transactionID });
            } else
            {
                @: Encrypted
            }
        </td>
    </tr>
}

</table>
