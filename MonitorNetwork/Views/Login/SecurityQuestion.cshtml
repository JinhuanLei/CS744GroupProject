@model MonitorNetwork.Models.SecurityQuestion
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("SecurityQuestion", "Login"))
        {
            for (int i = 0; i < Model.askedQuestions.Count; i++)
            {
                @Html.Hidden("askedQuestions[" + i + "]", Model.askedQuestions[i])
            }

            @Html.HiddenFor(x => x.username)
            @Html.HiddenFor(x => x.question)

            <div class="form-horizontal">
                <h4>Security Question</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label(Model.question, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.answer, new { htmlAttributes = new { @class = "form-control", @Value = "" } })
                        @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>