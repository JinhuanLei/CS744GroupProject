@model MonitorNetwork.Database.transaction

<td>
    @Html.DisplayFor(modelItem => Model.transactionID)
</td>
<td>
    @(Html.DisplayFor(modelItem => Model.creditcard.customerFirstName)) @(Html.DisplayFor(modelItem => Model.creditcard.customerLastName))
</td>
<td>
    @Html.DisplayFor(modelItem => Model.store.merchantName) (@Model.store.storeIP.Substring(8))
</td>
<td>
    @(Model.isCredit ? "Credit" : "Debit")
</td>
<td>
    @if (!Model.isCredit && Model.isSelf)
    {
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    }
</td>
<td>
    $@Html.DisplayFor(modelItem => Model.amount)
</td>
<td>
    @if(Model.status.HasValue)
    {
        if (Model.status.Value) {
            @:Approved
        } else {
            @:Declined
        }; 
    }
    else
    {
        @:Unprocessed
    }
</td>
<td>
	@if (Model.atProcCenter)
	{
		<a href="javascript:void(0)" onclick="sendBackToStore(@Model.transactionID, @Model.storeID)">Send Back to Store</a>
	}
    else if (Model.isSent)
    {
        @: Sent
    }
    else
    {
        <a href="javascript:void(0)" onclick="sendTransaction(@Model.transactionID, @Model.storeID)">Encrypt Then Send</a>
    }
</td>
