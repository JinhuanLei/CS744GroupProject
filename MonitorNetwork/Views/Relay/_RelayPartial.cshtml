@model MonitorNetwork.Models.RelayModel


<table>
    <thead>
        <tr>
            <th>Relay IP</th>
            <th>Connect</th>
            <th>Weight</th>
        </tr>
    </thead>
    <tbody>
    @{
        for (int i = 0; i < Model.checkboxRelayModel.Count; i++)
        {
            <tr>
                <td>@Model.checkboxRelayModel[i].relayIP</td>
                <td>@Html.CheckBoxFor(m => Model.checkboxRelayModel[i].selected)</td>
                <td>@Html.EditorFor(model => Model.checkboxRelayModel[i].weight, new { htmlAttributes = new { @class = "form-control", style = "width:70px;" } })</td>
                @Html.HiddenFor(model => Model.checkboxRelayModel[i].relayID)
            </tr>
        }
    }
    </tbody>
</table>